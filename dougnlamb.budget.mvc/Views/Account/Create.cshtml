@model dougnlamb.budget.models.AccountEditorModel

@{
    ViewBag.Title = "Create";
}

<div class="row top-margin-md">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="col-md-6">
            <div class="card">
                <div class="card form-header green">
                    <h3><i class="fa fa-lock"></i> Create Account</h3>
                </div>
                <div class="card-block">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    @Html.Label("Default Currency", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DefaultCurrencySelector, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DefaultCurrencySelector, "", new { @class = "text-danger" })

                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
