@model dougnlamb.budget.TransactionEditorModel

@{
    ViewBag.Title = "Create";
}

<div class="row top-margin-md">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.AccountSelector.SelectedAccountId)

        <div class="col-md-6">
            <div class="card">
                <div class="card form-header green">
                    <h3><i class="fa fa-lock"></i> Add Transaction</h3>
                </div>
                <div class="card-block">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.TransactionAmountEditor)

                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
