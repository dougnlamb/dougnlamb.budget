@model dougnlamb.budget.models.UserEditorModel

@{
    ViewBag.Title = "Index";
}

<div class="row top-margin-md">
    @using (Html.BeginForm("Save", "User")) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.oid)
        @Html.HiddenFor(m => m.UserId)

        <div class="col-md-6">
            <div class="card">
                <!--Header-->
                <div class="card form-header blue">
                    <h3 id="title"><i class="fa fa-pencil"></i> My Info</h3>
                </div>
                <div class="card-block">

                    <i class="fa fa-user prefix"></i>
                    <label for="DisplayName" class="">Your name</label>
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })

                    <i class="fa fa-envelope prefix"></i>
                    <label for="Email">Your email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                    <i class="fa fa-money prefix"></i>
                    <label for="DefaultCurrencySelector">Currency</label>
                    @Html.EditorFor(model => model.DefaultCurrencySelector, new { htmlAttributes = new { @class = "form-control" } })

                    <button id="submitButtonId" class="btn btn-default">Save</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
